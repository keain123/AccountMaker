<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" xmlns:app1="http://schemas.android.com/apk/res/ch.accountmaker">

    <com.rey.material.widget.TextView
        android:id="@+id/item_no"
        style="@style/Material.Drawable.Ripple.Wave.Light"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:padding="@dimen/dip_3"
        android:textAppearance="@style/Material.Widget.EditText.NoLabel.Light" />

    <com.rey.material.widget.TextView
        android:id="@+id/item_name"
        style="@style/Material.Widget.EditText.Light"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="wrap_content"
        android:padding="@dimen/dip_3"
        android:hint="产品名称"
        android:textAppearance="@style/Material.Widget.EditText.NoLabel.Light" />
    <com.rey.material.widget.TextView
        android:id="@+id/item_weight"
        style="@style/Material.Widget.EditText.NoLabel.Light"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:padding="@dimen/dip_3"
        android:hint="重量/克" />
    <com.rey.material.widget.TextView
        android:id="@+id/item_price"
        style="@style/Material.Widget.EditText.Light"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:padding="@dimen/dip_3"
        android:hint="单价/分"
        android:textAppearance="@style/Material.Widget.EditText.NoLabel.Light" />

</LinearLayout>