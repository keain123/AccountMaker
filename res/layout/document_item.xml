<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dip_20"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true" >
<RelativeLayout 
    android:layout_margin="@dimen/dip_5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:minHeight="@dimen/dip_30">
    
    

    <com.rey.material.widget.TextView
        android:id="@+id/doc_no"
        style="@style/Material.Drawable.Ripple.Wave.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        
        android:padding="@dimen/dip_3"
        android:text="1."
        android:textColor="#FF000000"
        android:textSize="@dimen/txt_size_18" 
        android:minHeight="@dimen/dip_30"/>
    
    

    <com.rey.material.widget.TextView
        android:id="@+id/doc_title"
        style="@style/Material.Drawable.Ripple.Wave.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/doc_no"
        android:layout_alignParentRight="true"
        android:hint="标题"
        android:padding="@dimen/dip_3"
        android:textColor="#FF000000"
        android:textSize="@dimen/txt_size_18" 
        android:minHeight="@dimen/dip_30"/>


</RelativeLayout>
</android.support.v7.widget.CardView>